@model WeightSettings

@{
    ViewData["Title"] = "Index";
}

<h5>اعدادات تكلفة الشحن الاضافية بالنسبة لوزن الشحنه</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row flex-nowrap row-cols-2" style="height:50px">
                <label>تكلفة الشحن الافتراضية (بالجنيه) من 0 كجم الي وزن </label>
                <input asp-for="Weight" class="w-25" />
                

                <label style="width:45px">كجم = </label>
                <input asp-for="Cost" class="w-25" />
                

                <label>و سعر كل كجم اضافي بمبلغ(بالجنيه)</label>
                <input asp-for="ExtraWeightCost" class="w-25" />
                

                <input type="submit" value="حفظ" class="btn btn-primary w-25 mx-2" />
            </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
