@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row row-cols-3 justify-content-center">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center">Create a new account</h2>
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating my-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" style="border:none;border-bottom:solid 1px #eee;border-radius:unset"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" style="border:none;border-bottom:solid 1px #eee;border-radius:unset"/>
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" style="border:none;border-bottom:solid 1px #eee;border-radius:unset"/>
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                
                <div>
                    <button id="registerSubmit"  style="background-color:#193662;border-color:#193662" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </div>
                
            </form>
        
   
    
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
